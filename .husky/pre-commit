#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "Running pre-commit hook..."

# Check Prettier
npm run check:format || (
  echo "Prettier check failed. Please run 'npm run fix:format' to fix. ❌"
  false;
)

echo "Prettier check completed successfully. ✅ "

# Check ESLint
npm run check:lint || (
  echo "ESLint check failed. Please run 'npm run fix:lint' to fix. ❌ "
  false;
)

echo "ESLint check completed successfully. ✅ "

# Check Build
npm run build || (
  echo "Build failed ❌ "
  false;
)

echo "Build completed successfully. ✅ "

# Everything is good!
echo "Done. 🎉 "